datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum UserRole {
    USER
    ADMIN
}

model Post {
    id        String   @id @default(uuid())
    title     String
    slug      String
    content   String
    createdAt DateTime @default(now())
    author    User     @relation(fields: [authorId], references: [id])
    authorId  String
}

model User {
    id       String @id @default(uuid())
    username String
    password String
    posts    Post[]
}
